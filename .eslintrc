ecmaFeatures:
  modules: true
  jsx: true

env:
  browser: true
  jquery: true

globals:
  DEBUG: false

extends: 'eslint:recommended'

# http://eslint.org/docs/rules/
rules:
  no-eval: 2
  indent:
    - error
    - 4
  linebreak-style:
    - error
    - unix
  quotes:
    - error
    - single
  semi:
    - error
    - always
  no-console: off
  wrap-iife: [2, inside]
